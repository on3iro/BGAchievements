{
  "name": "BGAchievements",
  "version": "1.0.0",
  "main": "index.html",
  "description": "Master your games...",
  "repository": {
    "type": "git",
    "url": "git@github.com:on3iro/BGAchievements.git"
  },
  "keywords": [
    "HTML5",
    "CSS",
    "JavaScript",
    "React",
    "Redux",
    "SASS"
  ],
  "bugs": {
    "url": "https://github.com/on3iro/BGAchievements/issues"
  },
  "scripts": {
    "start": "nf start",
    "api": "node internals/api.js",
    "client": "cross-env NODE_ENV=development webpack-dev-server --config webpack.config.js",
    "prebuild": "npm run svg-sprite",
    "build": "rimraf dist && cross-env NODE_ENV=production webpack --config webpack.config.js --progress --profile --colors",
    "flow": "flow",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "test:clean": "rimraf ./coverage",
    "pretest": "npm run test:clean",
    "test": "cross-env NODE_ENV=test jest --verbose",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coveralls": "cross-env NODE_ENV=test jest --coverage --runInBand && cat ./coverage/lcov.info | coveralls"
  },
  "jest": {
    "modulePaths": [
      "src"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "collectCoverageFrom": [
      "**/src/**/*.{js,jsx}",
      "!**/src/themes/**",
      "!**/src/App.jsx",
      "!**/src/global-styles.js",
      "!**/src/index.js",
      "!**/src/store.js",
      "!**/src/rootReducer.js"
    ],
    "moduleNameMapper": {
      "\\.(jpeg|jpg|png|gif|eot|webp|svg|ttf|woff2|mp3|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "coverageReporters": [
      "json",
      "lcov",
      "text"
    ],
    "setupTestFrameworkScriptFile": "./enzyme-setup.js"
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ],
    "ignore": [
      "**/dist/",
      "**/tests/",
      "**/flow-typed"
    ],
    "globals": [
      "describe",
      "it",
      "expect",
      "jest",
      "HTMLElement"
    ]
  },
  "license": "MIT",
  "private": true,
  "author": {
    "name": "Theo Salzmann",
    "email": "dev@on3iro.de"
  },
  "contributors": [],
  "homepage": "-",
  "dependencies": {
    "axios": "^0.17.1",
    "babel-polyfill": "^6.26.0",
    "normalize.css": "^7.0.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-dom-factories": "^1.0.2",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "recompose": "^0.26.0",
    "redux": "^3.7.2",
    "redux-devtools": "^3.4.1",
    "redux-loop": "^4.2.4",
    "reselect": "^3.0.1",
    "styled-components": "^2.3.0"
  },
  "engines": {},
  "devDependencies": {
    "autoprefixer": "^7.2.3",
    "babel-core": "^6.26.0",
    "babel-eslint": "8.0.3",
    "babel-jest": "^22.0.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-styled-components": "^1.3.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.7",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-flowtype": "^2.40.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "flow-bin": "^0.63.1",
    "flow-webpack-plugin": "^1.2.0",
    "foreman": "^2.0.0",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^2.30.1",
    "image-webpack-loader": "^3.4.2",
    "jest": "^22.0.1",
    "json-server": "^0.12.1",
    "jsx-loader": "^0.13.2",
    "node-sass": "^4.7.2",
    "postcss": "^6.0.14",
    "postcss-loader": "^2.0.9",
    "react-hot-loader": "^3.1.3",
    "react-test-renderer": "^16.2.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "standard": "^10.0.3",
    "standard-loader": "^6.0.1",
    "style-loader": "^0.19.1",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.9.7",
    "webpack-merge": "^4.1.1"
  }
}

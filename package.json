{
  "name": "BGAchievements",
  "version": "0.1.0",
  "description": "Create, share and unlock board game specific Achievements",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "node server",
    "build": "NODE_ENV=production rimraf dist && webpack --config ./webpack/webpack.production.config.js --progress --profile --colors",
    "lint": "standard --parser babel-eslint",
    "fix": "standard --parser babel-eslint --fix",
    "pretest": "npm run test:clean && npm run lint",
    "test:clean": "rimraf ./coverage",
    "test": "NODE_ENV=test jest --coverage",
    "test:watch": "NODE_ENV=test jest --coverage --watch",
    "coveralls": "NODE_ENV=test jest --coverage --runInBand && cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/on3iro/BGAchievements.git"
  },
  "babel": {
    "presets": [
      "react",
      [
        "es2015",
        {
          "modules": false
        }
      ],
      "stage-0"
    ],
    "env": {
      "test": {
        "plugins": [
          [
            "transform-es2015-modules-commonjs"
          ]
        ]
      }
    },
    "plugins": [
      "react-hot-loader/babel"
    ]
  },
  "keywords": [
    "frontend",
    "board game",
    "achievements",
    "react",
    "redux"
  ],
  "author": "Theo Salzmann",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/on3iro/BGAchievements/issues"
  },
  "jest": {
    "modulePaths": [
      "src"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "collectCoverageFrom": [
      "**/src/**/*.{js,jsx}",
      "!**/src/config/*",
      "!**/src/global-styles.js",
      "!**/src/index.js",
      "!**/src/rootReducer.js",
      "!**/src/rootSaga.js",
      "!**/src/routes.js",
      "!**/src/store.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "coverageReporters": [
      "json",
      "lcov",
      "text"
    ]
  },
  "standard": {
    "ignore": [
      "**/dist/",
      "**/tests/"
    ]
  },
  "homepage": "https://github.com/on3iro/passCreator-Frontend#readme",
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.22.2",
    "babel-core": "^6.13.2",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.22.0",
    "babel-preset-stage-2": "^6.13.0",
    "babel-register": "^6.22.0",
    "bundle-loader": "^0.5.5",
    "coveralls": "^2.11.16",
    "cross-env": "^5.0.1",
    "css-loader": "^0.28.4",
    "enzyme": "^2.7.1",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.28.0",
    "image-webpack-loader": "^3.3.0",
    "jest": "^20.0.4",
    "json-loader": "^0.5.4",
    "jsx-loader": "^0.13.2",
    "moxios": "^0.4.0",
    "postcss-loader": "^2.0.6",
    "react-addons-test-utils": "^15.4.2",
    "react-hot-loader": "^3.0.0-beta.7",
    "react-test-renderer": "^15.4.2",
    "rimraf": "^2.5.4",
    "standard": "^10.0.2",
    "standard-loader": "^6.0.1",
    "style-loader": "^0.18.2",
    "surge": "^0.19.0",
    "webpack": "^3.0.0",
    "webpack-dev-server": "^2.5.0"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "babel-polyfill": "^6.23.0",
    "classnames": "^2.2.5",
    "dotenv": "^4.0.0",
    "glamor": "^2.20.25",
    "grid-styled": "^1.0.1",
    "history": "^4.6.1",
    "prop-types": "^15.5.10",
    "rc-progress": "^2.1.0",
    "react": "^15.4.2",
    "react-autosuggest": "^9.0.0",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "react-router-dom": "^4.0.0",
    "react-router-redux": "^4.0.8",
    "redux": "^3.6.0",
    "redux-form": "^6.8.0",
    "redux-promise": "^0.5.3",
    "redux-saga": "^0.15.4",
    "reselect": "^3.0.1",
    "sanitize.css": "^5.0.0",
    "styled-components": "^2.1.0"
  }
}
